<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:layout_marginTop="-2dp"
        android:src="@mipmap/login_chinese" />

    <TextView
        android:id="@+id/tv_lphonenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_login"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"
        android:text="手机号："
        android:textSize="30sp" />
    <EditText
        android:id="@+id/ev_lphonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_login"
        android:layout_toRightOf="@+id/tv_lphonenum"
        android:layout_marginTop="100dp"
        android:layout_marginRight="60dp"
        android:background="@mipmap/editview"
        android:hint="输入手机号"
        android:maxLength="11"
        android:textSize="30sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_lpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lphonenum"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="60dp"
        android:text="密     码："
        android:textSize="30sp"/>
    <EditText
        android:id="@+id/ev_lpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lphonenum"
        android:layout_toRightOf="@+id/tv_lpassword"
        android:layout_marginTop="80dp"
        android:layout_marginRight="60dp"
        android:hint="输入密码"
        android:gravity="center"
        android:textSize="30sp"
        android:inputType="textPassword"
        android:background="@mipmap/editview"/>

    <TextView
        android:id="@+id/tv_lcntshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lpassword"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:maxLines="6"
        android:scrollbars="vertical"
        android:text="--record--"
        android:textSize="30sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/bv_lLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ev_lpassword"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="登录"
        android:textSize="30sp"
        android:background="@drawable/button_bgchange"/>

    <TextView
        android:id="@+id/tv_lnoCnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bv_lLogin"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:text="没有账号"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_lfgetPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bv_lLogin"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="440dp"
        android:layout_marginRight="60dp"
        android:text="忘记密码"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_lcheckcnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lfgetPwd"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="440dp"
        android:layout_marginRight="60dp"
        android:text="查看账户"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_lclearcnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lnoCnt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:text="清除记录"
        android:textSize="25sp"/>


</RelativeLayout>