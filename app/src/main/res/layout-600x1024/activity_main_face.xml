<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFace">

    <Button
        android:id = "@+id/bv_main_scan"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="200dp"
        android:background="@mipmap/scan_button"/>

    <TextView
        android:id="@+id/tv_main_getQuenair"
        android:layout_below="@+id/bv_main_scan"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="填\n问卷"
        android:textSize="28sp"
        android:gravity="center"
        android:background="@mipmap/item_pink"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/tv_main_createQuenair"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@mipmap/item_blue"
        android:text="发\n问卷"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_toRightOf="@+id/tv_main_getQuenair"
        android:layout_below="@+id/bv_main_scan"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="120dp"/>

    <RadioGroup
        android:id="@+id/rg_mainface"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="830dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_main_mainface"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/mianbg"
            android:background="@mipmap/item_tdword"
            android:button="@null"
            android:gravity="center"
            android:text="首页"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/rb_main_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/scan_button_50"
            android:button="@null"
            android:gravity="center"
            android:text="扫码"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/rb_main_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/fabu_50"
            android:button="@null"
            android:gravity="center"
            android:text="发布"
            android:textColor="#000000"/>

        <RadioButton
            android:id="@+id/rb_main_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/mine"
            android:button="@null"
            android:gravity="center"
            android:text="我的"
            android:textColor="#000000" />
    </RadioGroup>
</RelativeLayout>