<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/t_que12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Question 12"
        android:textSize="36sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/t_que12t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/t_que12"
        android:text="How much money do you earn per month?"
        android:textSize="20sp" />
    <RadioGroup
        android:id="@+id/q12_radioGroupId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_que12t"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/q12_havenojob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="60dp"
            android:checked="true"
            android:colorControlActivated="@color/green"
            android:text="I haven not got a job"
            android:textColor="@color/black"/>
        <RadioButton
            android:id="@+id/q12_under3000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="60dp"
            android:colorControlActivated="@color/green"
            android:text="Under 3000"
            android:textColor="@color/black"/>
        <RadioButton
            android:id="@+id/q12_3000_5000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="60dp"
            android:colorControlActivated="@color/green"
            android:text="3000-5000"
            android:textColor="@color/black"/>
        <RadioButton
            android:id="@+id/q12_5000_10000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="60dp"
            android:colorControlActivated="@color/green"
            android:text="5000-10000"
            android:textColor="@color/black"/>
        <RadioButton
            android:id="@+id/q12_morethan10000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="60dp"
            android:colorControlActivated="@color/green"
            android:text="More than 10000"
            android:textColor="@color/black"/>
    </RadioGroup>
    <Button
        android:id="@+id/q12_next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/q12_radioGroupId"
        android:text="NEXT"
        android:textSize="20sp"
        android:background="@color/green"
        android:textColor="@color/black"/>
    <!-- END    : Your code should be within this block -->

</RelativeLayout>
