<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id = "@+id/t_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:text="WELCOME TO"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <TextView
        android:id = "@+id/t_takesurvey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/t_welcome"
        android:text="TAKE PART IN OUR SURVEY!"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id = "@+id/t_beforestart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/t_takesurvey"
        android:text="Before we start, here are things you should know:"
        android:textSize="20sp" />
    <TextView
        android:id = "@+id/t_behonest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/t_beforestart"
        android:text="- Please be honest when making your choice."
        android:textSize="16sp"/>
    <TextView
        android:id = "@+id/t_weare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/t_behonest"
        android:text="- We are just doing a reaserch so you don't have to fake your information."
        android:textSize="16sp"/>
    <TextView
        android:id = "@+id/t_fellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/t_weare"
        android:text="- Please follow the step we designed for you and don't skip any questions."
        android:textSize="16sp"/>

    <CheckBox
        android:id="@+id/welcome_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/t_fellow"
        android:colorControlActivated="@color/green"
        android:text="I accept these requests." />

    <Button
        android:id="@+id/welcome_start"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/welcome_check"
        android:background="@color/green"
        android:text="LET'S START!"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <!-- END    : Your code should be within this block -->
</RelativeLayout>